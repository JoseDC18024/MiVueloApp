<!-- activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".bryangrande.PagoInsertarActivity">


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_insertarpago"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/id_pago_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID de pago" />

    <EditText
        android:id="@+id/fecha_pago_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de pago" />

    <EditText
        android:id="@+id/monto_pago_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Monto de pago" />

    <Button
        android:id="@+id/insertarp_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar" />

</LinearLayout>
