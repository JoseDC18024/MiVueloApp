<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".kevin.Vm17017AerolineaInsertarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_insertaraerolinea"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID DE AEROLÍNEA:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editTextIdAerolinea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID de la Aerolinea" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE DE AEROLÍNEA:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editTextNombreAerolinea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Aerolinea" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAÍS DE ORIGEN:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editTextPaisAerolinea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pais de origen" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FECHA DE CREACIÓN (DD/MM/YYYY):"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editTextFechaAerolinea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de creacion"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar"
        android:onClick="insertarAerolinea"
        android:background="@drawable/rounded_button"/>

    </LinearLayout>
</ScrollView>