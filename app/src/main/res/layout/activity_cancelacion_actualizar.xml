<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoletosActualizarActivity">

    <TableRow>
        <TextView android:text="Numero De Cancelacion" />

        <EditText
            android:id="@+id/editNumeroCancelacion"
            android:layout_width="203dp"
            android:inputType="text"
            android:maxLength="10" />
    </TableRow>

    <TableRow>
        <TextView android:text="Motivo De Cancelacion" />
        <EditText
            android:id="@+id/editMotivoC"
            android:inputType="text"
            android:maxLength="30" />
    </TableRow>
    <TableRow>
        <TextView android:text="Fecha Desde" />
        <EditText
            android:id="@+id/editFechaDesde"
            android:inputType="text"
            android:maxLength="30" />
    </TableRow>
    <TableRow>
        <TextView android:text="Fecha Hasta" />
        <EditText
            android:id="@+id/editFechaHasta"
            android:inputType="text"
            android:maxLength="1" />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/botonActualizarCancelacion"
            android:onClick="actualizarCancelacion"
            android:text="Actualizar Cancelacion" />

    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/botonLimpiar"
            android:onClick="LimpiarTexto"
            android:text="limpiar" />

    </TableRow>
</TableLayout>