<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".joseduran.BoletosActualizarActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".UpdateActivity">

        <EditText
            android:id="@+id/editIdEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Estado" />

        <EditText
            android:id="@+id/editDescripcionEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DescripciÃ³n Estado" />

        <EditText
            android:id="@+id/editTiempoRetraso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiempo de Retraso" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar"
            android:onClick="actualizarEstado" />

    </LinearLayout>


</TableLayout>